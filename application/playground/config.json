{
  "name"    : "Playground config.json",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "default-job" : "source",

  "let" :
  {
    "APPLICATION"  : "playground",
    "QOOXDOO_PATH" : "../..",
    "QXTHEME"      : "playground.theme.Theme",
    "LOCALES"      : [ "en", "de", "ro", "sv", "cs"],
    "OPTIMIZE"     : [
       "basecalls",
       "comments",
       "privates",
       "strings",
       "variables",
       "variants",
       "whitespace"
    ],
    "ROOT"         : "."
  },

  "config-warnings" :
  {
    "job-shadowing" :
    [
      "source",
      "source-hybrid",
      "build-resources",
      "build-script",
      "libraries",
      "translation"
    ],
    "environment" : [ "non-literal-keys" ]
  },

  "jobs" :
  {
    // provide "libraries" e.g. for 'lint' job
    "libraries" : 
    {
      "library" :
      [
        {
          "manifest" : "${QOOXDOO_PATH}/component/library/logpane/Manifest.json"
        },
        {
          "manifest" : "${QOOXDOO_PATH}/component/library/versionlabel/Manifest.json"
        }
      ]
    },

    // this one so that source, build-script and build-resources use common settings
    "playground-compile" :
    {
      "extend" : [ "libraries" ],

      "config-warnings" :
      {
        "exclude" : ["*"],
        "environment" : [ "variants-and-url-settings" ]
      },

      "include" :
      [
        "${APPLICATION}.*",
        "qx.*"
      ],

      "exclude" :
      [
        "qx.test.*",
        "qx.dev.unit.*",
        "qx.dev.FakeServer",  // as this depends on qx.dev.unit classes
        "playground.test.*"
      ],

      "environment" :
      {
        "qx.debug" : true,
        "qx.debug.ui.queue" : true,
        "qx.nativeScrollBars" : true,
        "qx.allowUrlSettings" : true,
        "qx.mobile.emulatetouch" : true
      },

      "run" : ["build-theme"]
    },


    "build-script" :
    {
      "extend" : [ "playground-compile" ],
      "add-css" :
      [
        {
          "uri" : "./resource/${APPLICATION}/css/indigo.css"
        }
      ]
    },


    "build-resources" :
    {
      "extend" : [ "playground-compile" ]
    },


    "source" :
    {
      "extend" : [ "playground-compile" ],
      "add-css" :
      [
        {
          "uri" : "./resource/${APPLICATION}/css/indigo.css"
        }
      ]
    },

    "source-hybrid" :
    {
      "extend" : [ "playground-compile" ],
      "add-css" :
      [
        {
          "uri" : "./resource/${APPLICATION}/css/indigo.css"
        }
      ]
    },

    "translation" :
    {
      "translate" : { "poentry-with-occurrences" : false  }
    },

    "build-theme" :
    {
      "desc"   : "Compiles the theme SCSS",
      "extend" : ["cache"],
      "let" :
      {
        "MOBILE_THEME_PATH" : "${QOOXDOO_PATH}/framework/source/resource/qx/mobile/",
        "SHARED_THEME_PATH" : "${QOOXDOO_PATH}/framework/source/resource/qx/scss/",
        "MOBILE_CSS_PATH" : "source/resource/${APPLICATION}/css",
      },
      "shell" :
      {
        "command" :
        [
          "${PYTHON_CMD} ${QOOXDOO_PATH}/tool/bin/scss.py ${MOBILE_THEME_PATH}scss/indigo.scss -o ${MOBILE_CSS_PATH}/indigo.css --load-path=${MOBILE_THEME_PATH}scss,${SHARED_THEME_PATH}",
        ]
      }
    }
  }


}
