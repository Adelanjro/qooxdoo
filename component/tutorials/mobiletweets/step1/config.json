{
  "name"    : "mobiletweets",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    "build",
    "clean",
    "distclean",
    "fix",
    "info",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "simulation-build",
    "simulation-run",
    "source",
    "source-all",
    "source-hybrid",
    "test",
    "test-source",
    "translation"
  ],

  "default-job" : "source-hybrid",

  "let" :
  {
    "APPLICATION"  : "mobiletweets",
    "APPLICATION_CSS" : "${APPLICATION}/css/styles.css",  // resource id of custom css
    "QOOXDOO_PATH" : "../../../../",
    "LOCALES"      : [ "en" ],
    "PLATFORM"     : "indigo",  // provide a default
    "QXTHEME"      : "", // preventing mobile app to load desktop icons
    "CSS_COMB_URI" : "./resource/${APPLICATION}/css/${PLATFORM}-style-min.css",
    "CSS_COMBINED" : "${BUILD_PATH}/${CSS_COMB_URI}",
    "ROOT"         : "."
  },

  "config-warnings" :
  {
    "job-shadowing" : [
      "source",
      "build",
      "source-all-script",
      "build-files",
      "build-script",
      "source-script"
    ],
    
    "environment" : ["non-literal-keys"]
  },

  // You only need to edit the remainder of this file, if you want to customize
  // specific jobs, or add own job definitions.

  "jobs" :
  {
    "mobile-common" :
    {
      "=include" :
      [
        "${APPLICATION}.Application"
      ],

      "environment" :
      {
        "qx.application" : "${APPLICATION}.Application",
        "qx.mobile.emulatetouch" : true,
        "qx.mobile.nativescroll" : false
        /* Remove following inline comment if you want to optimize code for webkit browsers.
         Attention: if webkit engine optimization is enabled, mobile app will not be
         usable in Firefox. */
        // ,"engine.name" : "webkit"
      },

      "run" : ["build-theme"]
    },


    "source" :
    {
      "let" : {
        "BUILD_PATH" : "${ROOT}/source"
      },
      "asset-let" : {
        "qx.mobile.platform" : [ "${PLATFORM}" ]
      }
    },


    "build" :
    {
      "let" : {
        "BUILD_PATH" : "${ROOT}/build"
      },
      "asset-let" : {
        "qx.mobile.platform" : [ "${PLATFORM}" ]
      },
      "=run" : ["build-theme","build-resources", "build-files", "build-script"]
    },


    "source-script" :
    {
      "extend" : ["mobile-common"],
      "add-css" : [
        { "uri" : "./resource/${APPLICATION}/css/indigo.css" },
        { "uri" : "./resource/${APPLICATION_CSS}" }
      ]
    },

    "build-script" :
    {
      "extend" : ["mobile-common"],
      "add-css" : [
        { "uri" : "./resource/${APPLICATION}/css/indigo.css" },
        { "uri" : "./resource/${APPLICATION_CSS}" }
      ]
    },

    "source-all-script" :
    {
      "extend" : ["mobile-common"],
      "=exclude" :
      [
        "qx.test.*",
        "${APPLICATION}.test.*",
        "${APPLICATION}.simulation.*"
      ],
      "asset-let" : {
        "qx.mobile.platform" : [ "${PLATFORM}" ]
      },
      "add-css" : [
        { "uri" : "./resource/${APPLICATION}/css/indigo.css" },
        { "uri" : "./resource/${APPLICATION_CSS}" }
      ]
    },

    "build-theme" :
    {
      "desc"   : "Compiles the theme SCSS",
      "extend" : ["cache"],
      "let" :
      {
        "MOBILE_THEME_PATH" : "${QOOXDOO_PATH}/framework/source/resource/qx/mobile/",
        "SHARED_THEME_PATH" : "${QOOXDOO_PATH}/framework/source/resource/qx/scss/",
        "MOBILE_CSS_PATH" : "source/resource/${APPLICATION}/css",
      },
      "shell" :
      {
        "command" :
        [
          "${PYTHON_CMD} ${QOOXDOO_PATH}/tool/bin/scss.py ${MOBILE_THEME_PATH}scss/indigo.scss -o ${MOBILE_CSS_PATH}/indigo.css --load-path=${MOBILE_THEME_PATH}scss,${SHARED_THEME_PATH}",
        ]
      }
    }
  }
}
